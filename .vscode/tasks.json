{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Profile",
            "detail": "Profiling using gprof",
            "command": "gprof ${command:cmake.getLaunchTargetPath} | gprof2dot --node-label=self-time --node-label=total-time --node-label=total-time-percentage --node-label=self-time-percentage -c print -w | dot -Tpng -Nfontname=Consolas -o profile.png",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
            }
        },
        {
            "type": "cmake",
            "label": "CMake: configure",
            "command": "configure",
            "problemMatcher": [],
            "detail": "CMake template configure task",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "type": "cmake",
            "label": "CMake: build",
            "command": "build",
            "dependsOn": [
                "CMake: configure"
            ],
            "targets": [
                "all"
            ],
            "group": "build",
            "problemMatcher": "$gcc",
            "detail": "CMake template build task",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}